.login_wrapper
  .app_name
    Yomikata
  = form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f|
    = render "devise/shared/error_messages", resource: resource
    .email_field_wrapper
      = f.label :メールアドレス, class: 'email'
      %br/
      = f.email_field :email, autofocus: true, autocomplete:"email" ,class:"email_field"
    .password_field_wrapper
      = f.label :パスワード（6文字以内）, class: 'password'
      
      %br/
      = f.password_field :password, autocomplete: "new-password", class: 'password_confirm_field'
    .field
      = f.label :再確認用パスワード, class: 'password'
      %br/
      = f.password_field :password_confirmation, autocomplete: "new-password", class: 'password_field'
    .actions
      = f.submit "サインアップ", class: 'login_btn'
  = render "devise/shared/links"
